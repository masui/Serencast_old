#!/usr/bin/env ruby
# -*- ruby -*-
#
# ltsvデータをJSONに変換
#

require 'json'
# require 'kconv'

root = {}
parents = []
parents[0] = root

category = ''

ARGF.each { |line|
#   line = Kconv.kconv(line, Kconv::UTF8, Kconv::AUTO)
  line.chomp!
  next if line =~ /^\s*$/m
  next if line =~ /^#/m

  line.sub!(/^(\s*)/,'')
  indent = $&.length

  node = {}
  parents[indent+1] = node
  if parents[indent]['children'].nil? then
    parents[indent]['children'] = []
    #if indent > 0 then
    #  nop = {}
    #  nop['url'] = ''
    #  nop['title'] = "#{category} リスト先頭"
    #  parents[indent]['children'] << nop
    #end
  end
  parents[indent]['children'] << node
  line.split(/\t/).each { |entry|
    entry =~ /^([a-zA-Z_]+):(\s*)(.*)$/
    node[$1] = $3
    if $1 == 'title'
      category = $3
    end
  }
}

puts root['children'].to_json
